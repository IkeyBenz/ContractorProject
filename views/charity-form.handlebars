<div class="container">
{{#if charity}}
<form action="/charities/{{charity._id}}/update?_method=PUT" method="POST">
{{else}}
<form action="/charities/new" method="POST">
{{/if}}
<div class="form-group">
    <label for="name">Name:</label>
    <input type="text" class="form-control" name="name" value="{{charity.name}}" required>
</div>
<div class="form-group">
    <label for="description">Description:</label>
    <input type="text" class="form-control" name="description" value="{{charity.description}}">
</div>
<div class="form-group">
    <label for="founder">Founder:</label>
    <input type="text" class="form-control" name="founder" placeholder="Your Name" value="{{charity.founder}}">
</div>
<div class="form-group">
    <button type="submit" class="btn btn-primary">Submit</button>
</div>
</form>
</div>
