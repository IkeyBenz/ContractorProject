<div class="container">


{{#if donation}}
<form action="/charities/{{charity._id}}/donations/{{donation._id}}/update?_method=PUT" method="POST">
{{else}}
<form action="/charities/{{charity._id}}/donations/new" method="POST">
{{/if}}

<div class="form-group">
    <label for="amount">Amount:</label>
    <input type="text" class="form-control" name="amount" value="{{donation.amount}}">
</div>
<div class="form-group">
    <label for="donor">Donor:</label>
    <input type="text" class="form-control" name="donor" placeholder="Your Name" value="{{donation.donor}}">
</div>
<div class="form-group">
    <label for="charity">For Charity:</label>
    <input type="text" class="form-control" name="charity" value="{{charity.name}}" readonly>
</div>

<input type="hidden" name="charityId" value="{{charity._id}}">
<input type="hidden" name="originalAmount" value="{{donation.amount}}">
<button type="submit" class="btn btn-primary">Submit</button>

</form>
{{#if donation}}
<form action="/charities/{{charity._id}}/donations/{{donation._id}}/delete?_method=DELETE" method="POST">
    <button type="submit" class="btn btn-danger">Resind Donation</button>
</form>
{{/if}}
</div>