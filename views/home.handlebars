<h1 style="text-align: center;">Charities</h1>
{{#each charities}}
<div class="card" style="width:21%; padding: 3%; margin: 1%; float: left;">
    <h2>{{this.name}}</h2>
    <h5>{{this.description}}</h5>
    <h3>Raised: ${{this.totalDonations}}.00</h3>
    <p>Founded By {{this.founder}}</p>
    <a class="btn btn-success" href="/charities/{{this._id}}/donations/new">Donate</a>
    <a class="btn btn-primary" href="/charities/{{this._id}}">See More</a>
</div>
{{/each}}